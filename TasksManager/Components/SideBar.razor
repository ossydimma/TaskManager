@code {
    [Parameter]
    public EventCallback<bool> OnStateChanged { get; set;}
    private bool Minimize { get; set; } = true;
    private DotNetObjectReference<SideBar>? dotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender) 
    {
        if (firstRender)
        {
            dotNetRef = DotNetObjectReference.Create(this);

            var screenWidth = await JSRuntime.InvokeAsync<int>("screenHelper.getScreenWidth");
            Console.WriteLine("from Blazor" + screenWidth);
            UpdateScreenWidth(screenWidth);

            await JSRuntime.InvokeVoidAsync("screenHelper.onResize", dotNetRef);
        }
        
        
    }

    [JSInvokable]
    public void UpdateScreenWidth(int width) 
    {
        if (width <= 815) 
        {
            Minimize = false;
        }
        else 
        {
            Minimize = true;
        }
        StateHasChanged(); 
    }
    private async void HandleMinimize()
    {
        Minimize = !Minimize;
        @* if ( Minimize == true )
        {
            Minimize = false ; 
        }
        else 
        {
            Minimize = true;
        }  *@
        await OnStateChanged.InvokeAsync(Minimize);
        StateHasChanged(); 
    } 


